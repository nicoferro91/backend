<h3>Nuestros productos</h3>
{{#if productList}}
<table class="table table-striped table-hover w-75 m-5">
    <thead>
        <tr class="table-primary">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        {{#each products}}
        <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td><img src="{{thumbnail}}" alt="foto producto"></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h4>No encontramos productos</h4>
{{/if}}